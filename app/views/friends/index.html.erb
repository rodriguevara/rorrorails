<% if user_signed_in?%>

  <h1>Friends</h1>

  <table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">

      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th colspan="2"></th>
       
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user%>
      <tr>
        <td>
        <%= link_to friend.first_name + " " + friend.last_name, friend %>
        
        </td>
        <td>
          <%= friend.email %>
        </td>
        <td>
          <%= friend.phone %>
        </td>
        <td>
          <%= friend.twitter %> 
        </td>
        
        <td>
        <%= link_to "Edit friend", edit_friend_path(friend), class:"btn btn-secondary" %>
        <td>
        <%= button_to "Destroy friend", friend, form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete,  class:"btn btn-danger" %>


      </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>

  <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

<% else %>
  <h1>Rorro World</h1>
  First Rorro page

<% end %>